<div class="container-pomodoro" data-controller="pomodoro" data-pomodoro-work-time-value="25" data-pomodoro-short-break-time-value="5" data-pomodoro-long-break-time-value="15" data-pomodoro-target="container">
  <div class="buttons-container">
    <div id="button-tomato">
      <button data-action="pomodoro#start"><i class="fa-solid fa-play"></i></button>
    </div>
    <div class="buttons-control">
      <div id="button-pause">
        <button data-action="pomodoro#stop"><i class="fa-solid fa-pause"></i></button>
      </div>
      <div id="button-reset">
        <button data-action="pomodoro#reset"><i class="fa-solid fa-rotate-left"></i></button>
      </div>
      <div id="button-start-break">
        <button data-action="pomodoro#startBreak">Start Break</button>
      </div>
    </div>
  </div>
  <div data-pomodoro-target="currentSession"></div>
  <div id="display-pomodoro" data-pomodoro-target="display">25:00</div>
  <div>
    <div>Complete Pomodoros: <span data-pomodoro-target="count"><%= current_user.days.last.pomodoros.where(status: 1).count %></span></div>
    <div>Next Up: <span data-pomodoro-target="nextSession">Work</span></div>
  </div>
  <%= render "pomodoros/whitenoise" %>
</div>
